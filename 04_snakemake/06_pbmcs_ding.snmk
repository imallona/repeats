def get_samples(fn):
    # samples = pd.read_table(fn)
   samples = []
   with open(fn) as fh:
    for line in fh: 
        samples.append(line.strip())
    return(samples)

rule all:
    input:
        expand(op.join(BASE, "runs", RUN_NAME, "data", "{srr}_1.fastq.gz"),
               srr = get_samples(op.join(BASE, "runs",
                                              RUN_NAME, 'data', 'pbmc_smartseq2_male.conf'))),
        expand(op.join(BASE, "runs", RUN_NAME, "data", "{srr}_1.fastq.gz"),
               srr = get_samples(op.join(BASE, "runs",
